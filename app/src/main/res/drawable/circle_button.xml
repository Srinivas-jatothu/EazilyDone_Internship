<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#6750a4"/> <!-- Change this to your desired button color -->
            <corners android:radius="25dp"/> <!-- This makes the button circular -->
            <stroke android:color="#FFFFFF" android:width="2dp"/> <!-- This adds a border -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/> <!-- This adds padding -->
        </shape>
    </item>
</selector>