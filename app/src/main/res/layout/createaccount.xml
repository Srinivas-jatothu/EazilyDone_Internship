<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <!-- Left Side (30% of screen) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/button_current_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Account" />

        <ScrollView
            android:id="@+id/scroll_view_current_accounts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/current_account_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp">

                <!-- Current account buttons -->
                <Button
                    android:id="@+id/button_premium_current_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Premium Current Account" />
                <Button
                    android:id="@+id/button_standard_current_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Standard Current Account" />

                <Button
                    android:id="@+id/button_foreign_currency_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foreign Currency Account" />




            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_saving_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saving Account"
            android:layout_marginTop="16dp" />

        <ScrollView
            android:id="@+id/scroll_view_saving_accounts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/saving_account_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp">

                <!-- Saving account buttons -->
                <Button
                    android:id="@+id/button_regular_savings_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Regular Savings Account" />

                <Button
                    android:id="@+id/button_zero_balance_savings_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zero Balance or Basic Savings Account" />

                <Button
                    android:id="@+id/button_kids_savings_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kids’ Savings Account" />

                <Button
                    android:id="@+id/button_salary_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salary Account – Salary-Based Savings Account" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>





    <!-- Right Side (70% of screen) -->
    <FrameLayout
        android:id="@+id/right_frame_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <!-- Content for the right side can be added here -->


    </FrameLayout>
</LinearLayout>