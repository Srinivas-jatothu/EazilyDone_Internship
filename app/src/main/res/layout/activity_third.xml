<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bankinterior"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bankPersonImage"
        android:layout_width="188dp"
        android:layout_height="235dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="515dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/player_image" />

    <!-- Chatbot Button -->

    <LinearLayout
        android:id="@+id/speechBubble"
        android:layout_width="469dp"
        android:layout_height="205dp"
        android:layout_below="@id/bankPersonImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="-265dp"
        android:layout_marginBottom="75dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/bankPersonText"
            android:layout_width="417dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="1dp"
            android:text="Hello! I am the bank manager. How can I help you today?"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@color/white"
            />

        <!-- Option Buttons -->
        <GridLayout
            android:layout_width="255dp"
            android:layout_height="139dp"
            android:layout_gravity="center_horizontal"
            android:alignmentMode="alignMargins"
            android:background="@color/white"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:id="@+id/accountDetailsButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:text="Account Details" />

            <Button
                android:id="@+id/createAccountButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:text="Create Account" />

            <Button
                android:id="@+id/depositButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:text="Deposit" />

            <Button
                android:id="@+id/otherButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:text="Other" />
        </GridLayout>
    </LinearLayout>

    <Button
        android:id="@+id/chatbotButton"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="55dp"
        android:text="Chatbot" />

</RelativeLayout>
